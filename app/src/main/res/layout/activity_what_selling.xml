<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_what_selling"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/customlighterGray"
    tools:context="com.example.adityavats.bioshare.WhatSellingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/customBlue"
        android:padding="@dimen/dim_10"
        android:gravity="left|center_vertical"
        android:text="What are you selling?"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="@dimen/dim_20"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/customLightGray"
        android:padding="@dimen/dim_10"
        android:gravity="left|center_vertical"
        android:text="@string/select_categories_u_sell"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:textSize="@dimen/dim_14"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dim_10">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/dim_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:textSize="@dimen/dim_18"
            android:paddingTop="@dimen/dim_10"
            android:paddingBottom="@dimen/dim_10"
            android:paddingLeft="@dimen/dim_20"
            android:text="Machines"
            android:textColor="@color/Black"
            android:drawableLeft="@drawable/wrong"
            android:drawablePadding="@dimen/dim_10"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LightGrey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dim_10">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/dim_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:textSize="@dimen/dim_18"
            android:paddingTop="@dimen/dim_10"
            android:paddingBottom="@dimen/dim_10"
            android:paddingLeft="@dimen/dim_20"
            android:text="Equipments"
            android:textColor="@color/Black"
            android:drawableLeft="@drawable/wrong"
            android:drawablePadding="@dimen/dim_10"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LightGrey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dim_10">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/dim_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:textSize="@dimen/dim_18"
            android:paddingTop="@dimen/dim_10"
            android:paddingBottom="@dimen/dim_10"
            android:paddingLeft="@dimen/dim_20"
            android:text="Chemicals"
            android:textColor="@color/Black"
            android:drawableLeft="@drawable/wrong"
            android:drawablePadding="@dimen/dim_10"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LightGrey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dim_10">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/dim_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:textSize="@dimen/dim_18"
            android:paddingTop="@dimen/dim_10"
            android:paddingBottom="@dimen/dim_10"
            android:paddingLeft="@dimen/dim_20"
            android:text="Vegetable Oil"
            android:textColor="@color/Black"
            android:drawableLeft="@drawable/wrong"
            android:drawablePadding="@dimen/dim_10"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LightGrey"/>

</LinearLayout>
