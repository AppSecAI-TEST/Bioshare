<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:color="@color/Gray" android:width=".5dp"/>
                    <solid android:color="@color/customGreen" />
                    <size
                        android:width="15dp"
                        android:height="15dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/tick"/>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <stroke android:color="@color/Gray" android:width=".5dp"/>
            <solid android:color="@color/customlighterGray" />
            <size
                android:width="15dp"
                android:height="15dp" />
        </shape>
    </item>
</selector>